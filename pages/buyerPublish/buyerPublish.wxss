/* pages/buyerPublish/buyerPublish.wxss */
.description-pic {
  width: 100rpx;
  height: 100rpx;
  float: left;
}

.bp-submit-wrap {
  position: fixed;
  left: 0;
  bottom: 0;
}

.bp-item {
  height: 100rpx;
  padding: 32rpx 30rpx;
  border-bottom: 1rpx solid #e0e0e0;
  box-sizing: border-box;
  background-color: #fff;
}

.bp-type-wrap {
  margin-bottom: 21rpx;
}

.bp-item-left {
  float: left;
}

.bp-item-right {
  float: right;
}

.bp-item-icon {
  width: 36rpx;
  height: 36rpx;  
  background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/ic_fbxq_yj.png);
  background-repeat: no-repeat;
  background-size: 100%;
  display: inline-block;
  vertical-align: middle;
  margin-top: -4rpx;
  margin-right: 14rpx;
}

.bp-item-header {
  font-size: 28rpx;
  color: #1b1d1d;
  display: inline-block;
}

.bp-picker {
  display: inline-block;
}

.bp-item-text {
  font-size: 28rpx;
  color: #767676;
}

.bp-item-arrow {
  width: 14rpx;
  height: 24rpx;
  background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/ic_gg_arrow.png);
  background-repeat: no-repeat;
  background-size: 100%;
  display: inline-block;
  vertical-align: middle;
  margin-left: 10rpx;
  margin-top: -4rpx;
}

.bp-desc-icon {
  background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/ic_fbxq_xq.png);
}

.bp-pub-icon {
  background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/ic_fbxq_call.png);
}

.bp-description-wrap,
.bp-publisher-wrap {
  background-color: #fff;
  margin-bottom: 21rpx;
}

.description-title,
.publisher-title {
  height: 100rpx;
  padding: 32rpx 30rpx 32rpx 0;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #e0e0e0;
  box-sizing: border-box;
  background-color: #fff;
}

.description-tpl-btn {
  color: #4285F4;
  font-size: 28rpx;
}

.bp-content {
  padding: 32rpx 30rpx 32rpx 0;
  margin-left: 30rpx;
  font-size: 28rpx;
  color: #1b1d1d;
  width: 100%;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e0e0e0;
}

.bp-content-placeholder {
  color: #b4b4b4;
}

.input-item {
  padding: 0rpx 30rpx 0rpx 0;
  margin-left: 30rpx;
  font-size: 28rpx;
  color: #1b1d1d;
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e0e0e0;
  display: flex;
  flex-direction: row;
}

.input-item text {
  width: 140rpx;
  height: 90rpx;
  line-height: 90rpx;
}

.bp-input {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
}

.bp-input-placeholder {
  color: #b4b4b4;
}

.description-pic-wrap {
  padding: 30rpx 0 30rpx 30rpx;
  display: flex;
  flex-direction: row;
  height: 120rpx;
}

.pic-item {
  width: 120rpx;
  height: 120rpx;
  margin-right: 22rpx;
}

.description-pic {
  width: 100%;
  height: 100%;
}

.pic-add {
  background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/btn_fbxq_pic.png);
  background-repeat: no-repeat;
  background-size: 100%;
}
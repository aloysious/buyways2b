/* pages/buyerDetail/buyerDetail.wxss */
.container {
  height: auto;
}

.bd-alert-wrap {
  padding: 26rpx 30rpx;
  background-color: #f7c022;
}

.bd-alert-icon {
  width: 34rpx;
  height: 34rpx;
  display: inline-block;
  background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/ic_details_tips.png);
  background-repeat: no-repeat;
  background-size: 100%;
  vertical-align: middle;
  margin-right: 10rpx;
  margin-top: -2rpx;
}

.bd-alert-tips {
  color: #fff;
  font-size: 28rpx;
  line-height: 36rpx;
  display: inline-block;
}

.bd-title-wrap {
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #e0e0e0;
  background-color: #fff;
}

.bd-title-left {
  width: 75%;
}

.bd-title-right {
  width: 25%;
}

.bd-title-main {
  font-size: 32rpx;
  font-weight: bold;
  color: #000;
  margin-bottom: 14rpx;
}

.bd-title-time {
  font-size: 24rpx;
  color: #767676;
}

.bd-title-status {
  text-align: right;
  font-size: 24rpx;
  color: #0dd0bd;
}

.bd-desc-wrap {
  margin-bottom: 20rpx;
  background-color: #fff;
}

.bd-desc-title {
  margin-left: 30rpx;
  border-bottom: 1rpx solid #e0e0e0;
  padding: 26rpx 0;
}

.bd-desc-icon {
  width: 36rpx;
  height: 36rpx;
  display: inline-block;
  background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/ic_details_ms.png);
  background-repeat: no-repeat;
  background-size: 100%;
  vertical-align: middle;
  margin-right: 10rpx;
  margin-top: -2rpx;
}

.bd-desc-text {
  color: #767676;
  font-size: 28rpx;
  line-height: 36rpx;
  display: inline-block;
}

.bd-desc-detail {
  padding: 26rpx 30rpx;
  height: 400rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

.bd-desc-detail-uncover {
  height: auto;
  min-height: 400rpx;
}

.bd-desc-content {
  color: #1b1d1d;
  font-size: 28rpx;
  line-height: 1.5;
  margin-bottom: 26rpx;
}

.bd-desc-pics {
  width: 100%;
}

.bd-desc-pics image {
  width: 100%;
  height: 350rpx;
  margin-bottom: 26rpx;
}

.bd-desc-open {
  position: absolute;
  bottom: -5rpx;
  left: 0;
  padding: 26rpx 0;
  width: 100%;
  background-color: #fff;
  box-shadow:  0 -20rpx 20rpx #fff;
  z-index: 999rpx;
}

.bd-open-wrap {
  width: 142rpx;
  margin: auto;
}

.bd-open-text {
  font-size: 28rpx;
  color: #4285f4;
  text-align: center;
  width: 112rpx;
  display: inline-block;
  margin-right: 10rpx;
}

.bd-open-icon {
  width: 20rpx;
  height: 8rpx;
   display: inline-block;
  background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/ic_details_arrow.png);
  background-repeat: no-repeat;
  background-size: 100%;
  vertical-align: middle;
}

.bd-info-wrap {
  padding-left: 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.bd-info-item {
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #212323;
  border-bottom: 1rpx solid #e0e0e0;
}

.bd-info-item text {
  color: #cacaca;
}

.bd-info-item-last {
  border-bottom: 0;
}

.bd-item-left {
  display: inline-block;
}

.bd-item-right {
  float: right;
}

.bd-item-phone {
  width: 70rpx;
  height: 70rpx;
  background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/btn_details_call.png);
  background-repeat: no-repeat;
  background-size: 100%;
  margin-top: -24rpx;
  margin-right: 21rpx;
}

.bd-comment-wrap {
  margin-bottom: 20rpx;
  background-color: #fff;
}

.bd-comment-title {
  border-bottom: 1rpx solid #e0e0e0;
  padding: 26rpx 30rpx;
  box-sizing: border-box;
}

.bd-comment-icon {
  width: 36rpx;
  height: 36rpx;
  display: inline-block;
  background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/ic_details_gz.png);
  background-repeat: no-repeat;
  background-size: 100%;
  vertical-align: middle;
  margin-right: 10rpx;
  margin-top: -2rpx;
}

.bd-comment-text {
  color: #767676;
  font-size: 28rpx;
  line-height: 36rpx;
  display: inline-block;
}

.bd-comment-list {
  position: relative;
  overflow: hidden;
}

.bd-comment-item {
  padding: 30rpx 30rpx;
  border-bottom: 1rpx solid #e0e0e0;
  display: flex;
  flex-direction: row;
}

.bd-comment-node {
  width: 38rpx;
  height: 38rpx;
  margin-right: 25rpx;
  background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/ic_details_dot_nor.png);
  background-repeat: no-repeat;
  background-size: 100%;
  margin-top: 20rpx;
  z-index: 10;
}

.bd-comment-avatar {
  width: 78rpx;
  height: 78rpx;
  margin-right: 25rpx;
  border-radius: 50%;
  overflow: hidden;
}

.bd-comment-avatar image {
  width: 100%;
  height: 100%;
}

.bd-comment-detail {
  flex: 1;
  font-size: 28rpx;
}

.comment-detail-top {
  margin-bottom: 11rpx;
}

.comment-detail-date {
  color: #767676;
}

.comment-detail-sep,
.comment-detail-name {
  color: #cacaca;
}

.comment-detail-bottom {
}

.comment-detail-content {
  color: #1b1d1d;
  line-height: 1.5;
}

.bd-comment-line {
  position: absolute;
  width: 4rpx;
  height: 100%;
  background-color: #d8d8d8;
  top: 69rpx;
  left: 48rpx;
  z-index: 9;
}

.bd-tool-wrap {
  padding: 14rpx 14rpx 14rpx 30rpx;
  display: flex;
  flex-direction: row;
  position: fixed;
  left: 0;
  bottom: 0;
  box-sizing: border-box;
  border-top: 1rpx solid #cccccc;
  background-color: #fff;
  width: 100%;
  z-index: 99;
}

.bd-tool-input {
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  background: #EEEEEE;
  border-radius: 34px;
  box-sizing: border-box;
  padding: 0 20rpx;
  color: #9b9b9b;
  font-size: 28rpx;
  margin-right: 59rpx;
}

.bd-tool-empty {
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  margin-right: 59rpx;
}

.bd-tool-comment {
  position: relative;
  margin-right: 40rpx;
}

.tool-comment-icon {
  width: 70rpx;
  height: 70rpx;
  background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/btn_details_dot_nor.png);
  background-repeat: no-repeat;
  background-size: 100%;
}

.tool-comment-num {
  width: 0;
  color: #767676;
  font-size: 24rpx;
  position: absolute;
  top: 10rpx;
  right: 15rpx;
}

.bd-tool-follow {
  width: 70rpx;
  height: 70rpx;
  background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/btn_details_dot_nor%20copy.png);
  background-repeat: no-repeat;
  background-size: 100%;
}

.bd-tool-follow-selected {
  background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/btn_details_dot_nor%20foc.png);
}

.comment-detail-pics {
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
}

.comment-detail-pics image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 6rpx;
}